
<%- include('./header.ejs')  %>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Fontawesome  link -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css"
        integrity="sha512-1sCRPdkRXhBV2PBLUdRb4tMg1w2YPf37qatUFeS7zlBy7jJI8Lf4VHwWfZZfpXtYSLy85pkm9GaYVYMfw5BC1A=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Bootstrap core CSS -->
    <link href="/assets/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="style/style.css" rel="stylesheet">

    <!-- Bootsstrap Link -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css">


    <link href="/public/assets/js/bootstrap.bundle.js" rel="stylesheet">
    <title>Price</title>
</head>
<body>
    <div class="formContainer text-center">
      <h1>Enter Price</h1>
      <% if(message.length > 0){ %>
        <div class="alert alert-success">
        <h5><%= message %></h5>
        </div>
        <% } %>
        <form action="/enterprice/<%=d._id%>" method="post">
        
        
      <div class='row mt-5 mb-3'>
        
        
        
          <input type="text" class="form-control w-100 inputprice" name="user_id" value="<%=id%>" hidden />
          
       <div class="col-4" >
         <label class="form-label"><b>Item name</b></label>
       </div>
       

       <div class="col-8" >
        
        <input type="text" class="form-control w-100 inputprice" name="name" value="<%=d.item_name%>" readOnly/>
        </div>
        
        <div class='row mt-5 mb-3'>
        <div class="col-4" >
          <label class="form-label"><b>Price</b></label>
        </div>
        
       <div class="col-8" >
       <input type="number" class="form-control w-100" name="price"/>
       </div>
       </div>
      
      <div class='formbtn mt-5'>
      <button type="submit" class="btn btn-success w-25"><b>Submit</b></button>
      </div>
     </form>
      </div>   
      <div class="">
        <table class="table table-striped-columns display" style="margin-top:125px">
          
            <tr class="text-center">
              <th>User_name</th>  
              <th>Item_Name</th>
              <th>Price</th>
                
                
            </tr>
            <% p.forEach((item)=>{%>
             
                <tr>
                  
                  <%if(d.item_name==item.name){%>
                    <td><%=t%></td>
                    <td><%= item.name%></td>
                    <td><%= item.price%></td>
                  
                  <%}%>
                  
                      
                    
                    
                  </td>
                  
                 
                  
                  </tr>
                  

                
          <% })%>
          
            
        </table>
        </div>
        
      
</body>

</html>

